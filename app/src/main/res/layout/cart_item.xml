<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:gravity="center">

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical">-->



                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/product1" />

            <!--</LinearLayout>-->


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|left">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toy Car Remote"
                android:textColor="@color/black"
                android:textSize="@dimen/mediam_text"
                android:layout_marginTop="3dp"
                android:maxLines="3"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="344 Qar"
                android:textColor="@color/black"
                android:textSize="@dimen/normalText"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <FrameLayout
                    android:id="@+id/fram_minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_out_link">

                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/big_text"
                        android:textStyle="bold"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/txt_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/big_text"
                    android:textStyle="bold"
                    android:text="5"
                    android:layout_margin="5dp"/>

                <FrameLayout
                    android:id="@+id/fram_plus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_profile">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="@dimen/big_text"
                        android:textStyle="bold"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
